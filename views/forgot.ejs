
<%- include('parts/header') %>
<link rel="stylesheet" href="/css/login.css">
<link rel="stylesheet" href="/css/footer.css">
</head>
<body>
<%# - include('parts/navbar')%>

    <div class="row text-center">
        <div class="design col col-12 col-lg-7" id='particles-js'>
            <div class="logo">
                <div class="the-logo">
                    <div></div>
                </div>
                <p>Watikah</p>
                <h2>You are at the right place</h2>
            </div>
        </div>
        <div class="login col col-12 col-lg-5">
            <div class="form">
                <h3>Forgot Password</h3>
                <hr>
                <%if(authErr){%>
                    <p class="alert alert-danger">
                        <%= authErr %>
                    </p>
                <%}%>
                <%if(successMsg){%>
                    <p class="alert alert-success">
                        <%= successMsg %>
                    </p>
                <%}%>
                <%if(expiredToken){%>
                    <p class="alert alert-danger">
                        <%= expiredToken %>
                    </p>
                <%}%>
                <form action="/forgot" method="POST" style="margin: 30px auto">
                    <%let emailErr = validationErr.find( err => err.param ==='email')%>
                    <%if(emailErr){%>
                        <p class="alert alert-danger">
                            <%=emailErr.msg%>
                        </p>
                    <%}%>
                    <div class="input">
                        <input type="email" required name="email" autofocus  autocomplete="off">
                        <label for="text">E-mail</label>
                    </div>
                    <button type="submit">Cuntinue <i class="fa fa-arrow-right"></i></button>
                </form>
            </div>
            <!-- *** Footer *** -->
            <div class="footer">
                <div>
                    <p>Developed and Designed with <i class="fa fa-heart"></i> & <i class="fa fa-coffee"></i>, by Amir Diafi. All Rights are recerved &COPY; 2020. watikah.com</p>
                    <ul>
                        <li>
                            <a href="http://">
                                <i class="fab fa-twitter fa-fw"></i>
                            </a>
                        </li>
                        <li>
                            <a href="http://">
                                <i class="fab fa-facebook fa-fw"></i>
                            </a>
                        </li>
                        <li>
                            <a href="http://">
                                <i class="fab fa-instagram fa-fw"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

<%- include('parts/footer')%>
<script src="/js/signup.js"></script>
<script src="/js/particles.min.js"></script>
<script src="/js/app.js"></script>
</body>
</html>
